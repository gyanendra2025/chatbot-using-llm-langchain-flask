# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Pinecone Vector Database Configuration
PINECONE_API_KEY=pc-your-pinecone-api-key-here

# Redis Cache Configuration (Optional - for production caching)
REDIS_HOST=localhost
REDIS_PORT=6379
# Upstash Redis (Optional - takes precedence over REDIS_HOST/PORT)
UPSTASH_REDIS_REST_URL=https://your-upstash-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# LangSmith Monitoring (Optional - for tracing and debugging)
LANGCHAIN_TRACING=false
LANGSMITH_API_KEY=ls-your-langsmith-api-key-here

# Sentry Error Tracking (Optional - for production error monitoring)
SENTRY_DSN=https://your-sentry-dsn-here

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True

